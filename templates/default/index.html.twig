{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>All articles {{ controller_name }}! âœ…</h1>

        {% for article in articles %}
            <a href="{{ path('app_article_show', {'id': article.id}) }}">{{ article.name }}</a>
            {% if article.category %}
                {{ article.category.name }}
            {% endif %}
            <br/>
        {% endfor %}
    </div>
{% endblock %}
